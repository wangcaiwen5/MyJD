<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:orientation="vertical"
        android:background="@drawable/b5a"
        android:layout_height="@dimen/y350"
        android:layout_width="match_parent"
        >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/pll"
            android:layout_marginTop="@dimen/x20"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/shezhi_setting"
                android:layout_marginRight="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shezhi" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/jd_message" />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.bwie.uploadpicture.view.CircleImageView
                android:layout_marginLeft="@dimen/x20"
                android:id="@+id/iv_head_img"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/x150"
                android:src="@drawable/b52"

                android:layout_alignBottom="@+id/tv_setting"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_name"
                android:textSize="20dp"
                android:layout_marginLeft="@dimen/x20"
                android:textColor="@color/white_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册 >"
                />

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white_text_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"

            android:id="@+id/ll_give_money"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv1"
                android:tint="@color/black_black_text_color"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:src="@drawable/daifukuan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="待付款"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_shopping_cart"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:src="@drawable/daishouhuo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:text="待收货"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_pj"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:src="@drawable/daipingjia"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:text="待评价"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_shouhou"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:src="@drawable/shouhou"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:text="退换/售后"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_my_order"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@color/activity_orangebg"
                android:id="@+id/imageView2"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:src="@drawable/wodedingdan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:text="我的订单"
                />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/gray_bg_color"
        ></View>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y25"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/ll_jdou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:textColor="@color/black_black_text_color"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:gravity="center"
                android:text="33" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="京豆" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jdou6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/x100"
                android:textColor="@color/black_black_text_color"
                android:layout_height="@dimen/y50"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="优惠券" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jdou8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:textColor="@color/black_black_text_color"
                android:gravity="center"
                android:text="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="白条" />

            <TextView
                android:layout_marginTop="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x20"
                android:text="开通有礼"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jdou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/x100"
                android:textColor="@color/black_black_text_color"

                android:layout_height="@dimen/y50"
                android:text="0.00" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="京东小金库" />

            <TextView
                android:layout_marginTop="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x20"
                android:text="昨日收益"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y50"
                android:tint="@color/activity_orangebg"
                android:src="@drawable/wodeqianbao" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black_black_text_color"
                android:textSize="@dimen/x25"
                android:layout_marginTop="@dimen/x15"
                android:layout_height="wrap_content"
                android:text="我的钱包" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/y25"
        android:orientation="vertical"
        android:background="@color/white_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_text_color"
                    android:text="5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="商品关注"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@color/red_text_color" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:text="店铺关注"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_text_color"
                    android:text="0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="内容关注"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_text_color"
                    android:text="33"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="商品关注"
                    />
            </LinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_bg_color"
            ></View>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y25"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y50"
                    android:src="@drawable/neirongguanzhu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y50"
                    android:src="@drawable/shequ"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="社区"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y50"
                    android:src="@drawable/kehufuwu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="客服服务"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y50"
                    android:src="@drawable/shangpinguanzhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_black_text_color"
                    android:textSize="@dimen/x25"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:text="全球购" />
            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/y25"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_vip"
        />

</com.zhy.android.percent.support.PercentLinearLayout>