<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.myjd.MyOrderActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/white_text_color">
        <TextView
            android:textColor="@color/black_black_text_color"
            android:id="@+id/tv_upPage"
            android:layout_marginLeft="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="上一页"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="@color/black_black_text_color" />


        <TextView
            android:id="@+id/tv_nextPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center_vertical"
            android:text="下一页"
            android:textColor="@color/black_black_text_color" />
    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/x1"
    android:background="@color/gray_bg_color"
    ></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_myorderlist"
        android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
