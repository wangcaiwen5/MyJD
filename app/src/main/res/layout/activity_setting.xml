<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.myjd.SettingActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#000000"
        android:text="账户设置"
        />

   <RelativeLayout
       android:id="@+id/setting_personal"
       android:layout_width="match_parent"
       android:layout_height="@dimen/y200"
       android:background="#ffffff">

      <com.bwie.uploadpicture.view.CircleImageView
          android:id="@+id/iv_setting_img"
          android:layout_width="@dimen/x100"
          android:layout_height="@dimen/y100"
          android:layout_centerVertical="true"
          android:src="@drawable/ren_head" />

      <TextView
          android:id="@+id/tv_setting_username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/x20"
          android:layout_toRightOf="@+id/iv_setting_img"
          android:text="用户名" />


      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/x20"
          android:layout_marginTop="@dimen/y80"
          android:src="@drawable/jiantou" />
   </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/zll"
       android:layout_marginTop="@dimen/y20"
       android:background="#ffffff"
       android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/y80">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="会员俱乐部"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"></View>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/y80"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="小白信用"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"
          android:padding="5dip"></View>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/y80"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="地址管理"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"
          android:padding="5dip"></View>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dip"
          android:layout_marginTop="1dip"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="增票资质"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"
          android:padding="5dip"></View>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/y80"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="实名注册"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"
          android:padding="5dip"></View>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/y80"
          android:orientation="vertical">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/x20"
             android:text="账户安全"
             android:textColor="#000000" />

         <ImageView
             android:layout_width="@dimen/x40"
             android:layout_height="@dimen/y20"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/x20"
             android:scaleType="centerInside"
             android:src="@drawable/jiantou" />
      </RelativeLayout>


   </LinearLayout>

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80"
    android:layout_marginTop="@dimen/x40"
    android:orientation="vertical">
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:id="@+id/bt_drop_out"
          android:background="#fff"
          android:text="退出登录" />
   </RelativeLayout>


</LinearLayout>
