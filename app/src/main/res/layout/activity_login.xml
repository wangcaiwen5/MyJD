<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.myjd.LoginActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#000000"
        android:layout_marginTop="20dip"
        android:text="京东登陆"
        />



    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:hint="用户名/邮箱/手机号" />
    <EditText
        android:id="@+id/et_paw"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        />

    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机快速注册"
            android:textColor="#000000"
            android:layout_marginLeft="10dip"
            />

        <TextView
            android:id="@+id/tv_updatePaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="10dip"
            android:text="忘记密码"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dip"
        >
        <ImageView
            android:id="@+id/weixin"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dip"
            android:src="@drawable/weixin"
            />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dip"
            android:src="@drawable/qq"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆即代表您已经同意京东隐私政策"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dip"
            />
    </RelativeLayout>
</LinearLayout>
