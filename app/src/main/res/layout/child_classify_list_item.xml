<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_shopplist_img"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x350"
        android:src="@mipmap/ic_launcher"
        android:layout_height="@dimen/x350" />

    <LinearLayout
        android:layout_marginLeft="@dimen/x15"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_shopplist_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shopplist_msg"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/y30"
            android:textColor="@color/black_black_text_color"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="详情"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_shopplist_price"
            android:layout_width="wrap_content"
            android:text="价格"
            android:layout_height="wrap_content"
            android:textColor="@color/red_text_color"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/x60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red_text_color"
                android:background="@drawable/shape_shopplist_bk"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="自营"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="43423条评价"
                android:layout_marginLeft="@dimen/x20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96%好评"
                android:layout_marginLeft="@dimen/x20"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_bg_color"
            ></View>
    </LinearLayout>

</RelativeLayout>